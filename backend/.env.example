# Happy Partner 儿童教育AI系统 - 环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME="Happy Partner - 儿童教育AI系统"
APP_VERSION="0.2.0"
APP_DESCRIPTION="一个多代理架构的儿童教育AI系统，专注于教育辅助和情感陪伴"

# 服务器配置
HOST="127.0.0.1"
PORT=8001
DEBUG=false
RELOAD=false

# 数据库配置
DATABASE_URL="sqlite:///./happy_partner.db"

# 安全配置
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 音频配置
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT="wav"
MAX_AUDIO_DURATION=300

# OpenAI配置
OPENAI_API_KEY="sk-054b723c3a1b4e21839f560466cf6f3d"
OPENAI_BASE_URL="https://api.deepseek.com"
OPENAI_DEFAULT_MODEL="qwen-turbo"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=30

# Ollama配置
USE_OLLAMA=true
OLLAMA_BASE_URL="http://localhost:11436"
OLLAMA_DEFAULT_MODEL="qwen2.5:0.5b"
OLLAMA_TIMEOUT=60

# Mem0记忆系统配置
MEM0_ENABLED=true
MEM0_VECTOR_STORE_PROVIDER="qdrant"
MEM0_QDRANT_PATH="./qdrant_db"
MEM0_COLLECTION_NAME="happy_partner"
MEM0_EMBEDDING_MODEL="text-embedding-3-small"
MEM0_EMBEDDING_DIMS=1536
MEM0_CACHE_TTL=300

# TTS语音合成配置
TTS_PROVIDER="edge-tts"
TTS_VOICE="zh-CN-XiaoxiaoNeural"
TTS_RATE=0
TTS_VOLUME=100

# STT语音识别配置
STT_PROVIDER="whisper"
STT_MODEL="base"
STT_LANGUAGE="zh"

# 多代理系统配置
MULTI_AGENT_ENABLED=true
INTENT_AGENT_ENABLED=true
SAFETY_AGENT_ENABLED=true
EMOTION_AGENT_ENABLED=true
EDU_AGENT_ENABLED=true
MEMORY_AGENT_ENABLED=true
WORLD_AGENT_ENABLED=true
ROLE_AGENT_ENABLED=true
ROLE_FACTORY_ENABLED=true
CHAPTER_MANAGER_ENABLED=true

# 故事系统配置
STORY_MAX_CHAPTERS=10
STORY_MAX_ROLES=5
STORY_SESSION_TIMEOUT=3600

# 教育系统配置
EDU_MAX_QUESTIONS=5

# 安全系统配置
SAFETY_CHECK_ENABLED=true
SAFETY_FILTER_LEVEL="strict"

# 日志配置
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# 性能配置
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60
CACHE_ENABLED=true
CACHE_TTL=300

# CORS配置
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]